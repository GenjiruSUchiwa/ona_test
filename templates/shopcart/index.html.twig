{% extends 'homebase.html.twig' %}
{#{% block title %}{{data[0].title}}{% endblock %}#}
{#{% block keywords%}{{ data[0].keywords }}{% endblock %}#}
{#{% block description%}{{ data[0].description }}{% endblock %}#}
{% block body %}

    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Shopping Cart</h1>
                    <nav class="d-flex align-items-center">
                        <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="category.html">Cart</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Cart Area =================-->
    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for shopcart in shopcarts %}
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="d-flex">
                                        <img src="{{ asset('assets/zhauddeiieygftro') }}/img/cart.jpg" alt="">
                                    </div>
                                    <div class="media-body">
                                        <p>{{ shopcart.title }}</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <h5>{{ shopcart.price }}</h5>
                            </td>
                            <td>
                                <h5>{{ shopcart.quantity }}</h5>
                            </td>
                            <td>
                                <h5>{{ shopcart.quantity * shopcart.price }} FCFA</h5>
                            </td>
                        </tr>
                            {% set total = total + (shopcart.quantity * shopcart.price) %}
                        {% endfor %}
                        <tr>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <h5>Subtotal</h5>
                            </td>
                            <td>
                                <h5>{{ total }} FCFA</h5>
                            </td>
                        </tr>
                        <tr class="out_button_area">
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>

                            </td>
                            <td>
                                <div class="checkout_btn_inner d-flex align-items-center">
                                    <a class="gray_btn" href="/">Continue Shopping</a>
                                    <a class="primary-btn" href="{{ path('orders_new') }}">Proceed to checkout</a>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!--================End Cart Area =================-->
{% endblock %}