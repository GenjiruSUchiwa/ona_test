{% extends 'adminbase.html.twig' %}
{% block title %}Category List{% endblock %}
{% block body %}
	<div class="app-container">
		<!-- begin app-nabar -->

		<!-- end app-navbar -->
		<!-- begin app-main -->
		<div
				class="app-main" id="main"> <!-- begin container-fluid -->
			<div
					class="container-fluid">
				<!-- begin row -->
				<div class="row">
					<div
							class="col-md-12 m-b-30">
						<!-- begin page title -->
						<div class="d-block d-sm-flex flex-nowrap align-items-center">
							<div class="page-title mb-2 mb-sm-0">
								<h1>Categories List</h1>

							</div>
							<div class="ml-auto d-flex align-items-center">
							</div>
						</div>
						<!-- end page title -->


					</div>

				</div>
				<!-- end row -->

				<!--start contact contant-->

				<div class="row">


					<table class="table table-light mb-0">
						<thead>
						<tr>
							<th>Id</th>
							<th>Parentid</th>
							<th>Title</th>
							<th>Keywords</th>
							<th>Description</th>
							<th>Status</th>
							<th>actions</th>
						</tr>
						</thead>
						<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.parentid }}</td>
								<td>{{ category.title }}</td>
								<td>{{ category.keywords }}</td>
								<td>{{ category.description }}</td>
								<td>{{ category.status }}</td>
								<td>
									<a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="10">no records found</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>

					<a class="btn btn-info my-2" href="{{ path('category_new') }}">Create new</a>

				</div>

				<!--end contact contant-->
			</div>
			<!-- end container-fluid -->
		</div>
		<!-- end app-main -->
	</div>
{% endblock %}
