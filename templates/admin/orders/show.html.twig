{% extends 'adminbase.html.twig' %}
{% block title %}Order detail
{% endblock %}
{% block body %}
    <div class="app-container">
        <!-- begin app-nabar -->

        <!-- end app-navbar -->
        <!-- begin app-main -->
        <div
                class="app-main" id="main"> <!-- begin container-fluid -->
            <div
                    class="container-fluid">
                <!-- begin row -->
                <div class="row">
                    <div
                            class="col-md-12 m-b-30">
                        <!-- begin page title -->
                        <div class="d-block d-sm-flex flex-nowrap align-items-center">
                            <div class="page-title mb-2 mb-sm-0">
                                <h1>Order detail</h1>

                            </div>
                            <div class="ml-auto d-flex align-items-center">
                                <nav>
                                    <ol class="breadcrumb p-0 m-b-0">
                                        <li class="breadcrumb-item">
                                            <a href="/admin/">
                                                <i class="ti ti-home"></i>
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            Index
                                        </li>
                                        <li class="breadcrumb-item active text-primary" aria-current="page">Order</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                        <!-- end page title -->


                    </div>

                </div>
                <!-- end row -->

                <!--start contact contant-->

                <div class="row" id="print-area">


                    <table class="table table-light mb-0">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ order.userid }}</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>{{ order.amount }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ order.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ order.address }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ order.phone }}</td>
                        </tr>

                        <form action="{{ path('admin_orders_update',{'id': order.id}) }}" method="post">
                            <tr>
                                <th>Shipinfo</th>
                                <td>{{ order.shipinfo }}</td>
                            </tr>
                            <tr>
                                <th>Admin Note</th>
                                <td> {{ order.note }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    {{ order.status }}
                                </td>
                            </tr>
                        </form>
                        </tbody>
                    </table>

                    <table class="table table-light mb-0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for rs in orderdetail %}
                            <tr>
                                <td>{{ rs.id }}</td>
                                <td>{{ rs.name }}</td>
                                <td>{{ rs.price }}</td>
                                <td>{{ rs.quantity }}</td>
                                <td>{{ rs.status }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Order Detail</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="5"><b>Toplam Alışveriş Tutarı : {{ order.amount }}</b></td>
                        </tr>
                        </tbody>
                    </table>


                    <button onClick="printJS({ printable: 'print-area', type: 'html', targetStyles: ['*']})" class="btn my-2 btn-warning">print</button>

                    <br>
                    <br>

                </div>

                <!--end contact contant-->
            </div>
            <!-- end container-fluid -->
        </div>
        <!-- end app-main -->
    </div>
{% endblock %}
